<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResultFragment"
    android:clickable="true"
    android:background="#F6F6F6">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Questions : 15"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:textSize="20dp"
        android:id="@+id/txtCorrectAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Correct Answers : " />

    <TextView
        android:textSize="20dp"
        android:id="@+id/txtWrongAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Wrong Answers : " />

    <TextView
        android:textSize="20dp"
        android:id="@+id/txtEmptyAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Empty Answers : " />

    <TextView
        android:textSize="20dp"
        android:id="@+id/txtScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="#CA2929"
        android:text="Score : " />

    <Button
        android:textSize="20dp"
        android:id="@+id/buttonTryAgain"
        android:layout_marginTop="400dp"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:text="try again"></Button>

    <Button
        android:textSize="20dp"
        android:id="@+id/buttonResultAnalysis"
        android:layout_marginTop="400dp"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginLeft="220dp"
        android:text="result analysis"></Button>

</FrameLayout>